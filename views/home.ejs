<%- include('header.ejs')%>
<div class="post-container">
   <% for(let i=0; i < posts.length; i++){ %>
       <div class="blog_post">
           <div class="container_copy">
               <h3 class="post-date"><%= posts[i].createdAt %> </h3>
               <h1 class="post-title">
                   <%= posts[i].title %>
               </h1>
               <p class="post-message">
                   <!-- truncate the post messge after 100 words -->

                   <%= posts[i].message.substring(0,50) + '....' %>
               </p>
               <a class="btn_primary" href='/posts/<%=posts[i]._id%>'>Read More</a>
           </div>

       </div>
   <% } %>
</div>



<%- include('footer.ejs')%>